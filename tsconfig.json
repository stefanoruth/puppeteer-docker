{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "./src"
    },
    "include": ["src"]
}
