{
    "name": "puppeteer-docker",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon"
    },
    "dependencies": {
        "@types/node": "v18",
        "nodemon": "^3.0.1",
        "puppeteer": "^21.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "proseWrap": "always",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120
    },
    "nodemonConfig": {
        "ext": "ts",
        "exec": "ts-node src/index.ts",
        "ignore": [
            "src/**/*.test.ts"
        ],
        "watch": [
            ".env",
            "src/**/*.ts"
        ]
    }
}
